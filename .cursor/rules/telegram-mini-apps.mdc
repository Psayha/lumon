import React, { useState } from 'react';
import { useTelegramTheme } from '../hooks/useTelegramTheme';

interface TelegramInputProps {
  value: string;
  onChange: (value: string) => void;
  placeholder?: string;
  type?: 'text' | 'email' | 'password' | 'number';
  disabled?: boolean;
  error?: string;
  label?: string;
  className?: string;
}

export const TelegramInput: React.FC<TelegramInputProps> = ({
  value,
  onChange,
  placeholder = '',
  type = 'text',
  disabled = false,
  error,
  label,
  className = ''
}) => {
  const { themeParams } = useTelegramTheme();
  const [isFocused, setIsFocused] = useState(false);

  const inputStyle = {
          backgroundColor: themeParams.bg_color || '#ffffff',
    color: themeParams.text_color || '#000000',
    borderColor: error 
      ? '#dc2626' 
      : isFocused 
        ? themeParams.button_color || '#2481cc'
        : themeParams.hint_color || '#999999'
  };

  return (
    <div className={`space-y-2 ${className}`}>
      {label && (
        <label className="block text-sm font-medium" style={{ color: themeParams.text_color }}>
          {label}
        </label>
      )}
      
      <input
        type={type}
        value={value}
        onChange={(e) => onChange(e.target.value)}
        onFocus={() => setIsFocused(true)}
        onBlur={() => setIsFocused(false)}
        placeholder={placeholder}
        disabled={disabled}
        className={`
          w-full px-3 py-2 rounded-lg
          border-2 transition-colors duration-150
          focus:outline-none
          disabled:opacity-50 disabled:cursor-not-allowed
