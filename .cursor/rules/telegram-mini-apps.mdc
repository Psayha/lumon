          ...baseStyle,
          backgroundColor: 'transparent',
          border: `2px solid ${themeParams.hint_color || '#e5e5e5'}`
        };
      default:
        return baseStyle;
    }
  };
  
  return (
    <div 
      onClick={onClick}
      className={`
        p-4 rounded-lg
        transition-colors duration-150
        ${onClick ? 'cursor-pointer hover:opacity-90' : ''}
        ${className}
      `}
      style={getCardStyle()}
    >
      {children}
    </div>
  );
