# ====================================
# FRONTEND CONFIGURATION
# ====================================

# API Backend URL
# Development: http://localhost:3000
# Production: https://your-api-domain.com
# REQUIRED in production builds!
VITE_API_URL=http://localhost:3000

# ====================================
# BACKEND CONFIGURATION (NestJS)
# ====================================

# Server Port
PORT=3000

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=your_password_here
DB_NAME=lumon

# Admin Credentials
ADMIN_USERNAME=admin
ADMIN_PASSWORD=change_this_secure_password

# Session Configuration
SESSION_SECRET=your_session_secret_here_change_in_production
SESSION_EXPIRY_DAYS=7

# CORS Configuration
# Comma-separated list of allowed origins
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# OpenAI API Configuration (для AI функционала)
OPENAI_API_KEY=sk-your-openai-key-here

# Supabase Configuration (для векторной БД)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_SERVICE_KEY=your-supabase-service-key

# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# Environment
NODE_ENV=development

# ====================================
# DOCKER & DATABASE SECURITY
# ====================================

# SECURITY: PostgreSQL password (REQUIRED for Docker)
# Use a strong password (min 16 chars, mixed case, numbers, symbols)
# NEVER commit the actual .env file with real passwords!
POSTGRES_PASSWORD=your_secure_postgres_password_here_min_16_chars

# PostgreSQL database name and user
POSTGRES_DB=lumon
POSTGRES_USER=postgres

# ====================================
# N8N WORKFLOW AUTOMATION (Docker)
# ====================================

# SECURITY: n8n admin credentials (REQUIRED for Docker)
N8N_USER=your_n8n_admin_username
N8N_PASSWORD=your_secure_n8n_password_min_16_chars

# SECURITY: n8n encryption key (REQUIRED for Docker)
# Generate with: openssl rand -hex 32
N8N_ENCRYPTION_KEY=your_64_char_hex_encryption_key_generate_with_openssl

# n8n host configuration (REQUIRED for Docker)
N8N_HOST=n8n.your-domain.com
N8N_PROTOCOL=https

# n8n CORS and webhook URLs (REQUIRED for Docker)
N8N_CORS_ORIGIN=https://your-domain.com,https://n8n.your-domain.com
WEBHOOK_URL=https://n8n.your-domain.com/
N8N_EDITOR_BASE_URL=https://n8n.your-domain.com

# ====================================
# CSRF PROTECTION (Optional)
# ====================================

# CSRF secret key for token generation (optional but recommended)
# Generate with: openssl rand -hex 32
# If not set, a random key will be generated on each restart
CSRF_SECRET_KEY=your_64_char_hex_csrf_secret_generate_with_openssl

# ====================================
# PRODUCTION DEPLOYMENT
# ====================================

# For production, set these values:
# VITE_API_URL=https://your-domain.com
# NODE_ENV=production
# Use strong passwords and secrets (min 16 characters)
# Enable SSL/HTTPS with reverse proxy (nginx/traefik)
# Set all REQUIRED environment variables above
# Never use default/example values in production!
