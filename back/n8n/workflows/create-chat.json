      "parameters": {
        "jsCode": "// Форматирование ответа\nconst chat = $input.item.json;\n\nreturn {\n  json: {\n    success: true,\n    data: {\n      id: chat.id,\n      user_id: chat.user_id,\n      title: chat.title,\n      created_at: chat.created_at,\n      expires_at: chat.expires_at\n    }\n  }\n};"
