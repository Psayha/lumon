          "mappingMode": "defineBelow",
          "value": {
            "user_id": "={{ $json.user_id }}",
            "title": "={{ $json.title }}",
            "expires_at": "={{ $json.expires_at }}"
          }
        },
        "options": {}
      },
      "id": "insert-chat",
