            "leftValue": "",
            "typeValidation": "strict"
          },
          "conditions": [
            {
              "id": "check-validation-error",
              "leftValue": "={{ $json.error }}",
              "rightValue": "",
              "operator": {
                "type": "string",
                "operation": "notEmpty"
              }
            }
          ],
          "combinator": "and"
        },
        "options": {}
      },
      "id": "check-validation-error",
      "name": "IF Validation Error",
      "type": "n8n-nodes-base.if",
      "typeVersion": 2,
      "position": [1150, 400]
    },
    {
      "parameters": {
        "functionCode": "// Generate new UUID v4\nfunction uuidv4() {\n  return 'xxxxxxxx-xxxx-4xxx-yxxx-xxxxxxxxxxxx'.replace(/[xy]/g, function(c) {\n    const r = Math.random() * 16 | 0;\n    const v = c === 'x' ? r : (r & 0x3 | 0x8);\n    return v.toString(16);\n  });\n}\n\nconst oldSession = $input.item.json;\nconst newToken = uuidv4();\n\nreturn {\n  json: {\n    old_token: oldSession.session_token,\n    new_token: newToken,\n    user_id: oldSession.user_id,\n    company_id: oldSession.company_id,\n    role: oldSession.role\n  }\n};"
      },
      "id": "generate-new-token",
      "name": "Generate New Token",
      "type": "n8n-nodes-base.function",
      "typeVersion": 1,
      "position": [1350, 500]
    },
    {
      "parameters": {
        "operation": "executeQuery",
        "query": "UPDATE sessions \nSET is_active = false \nWHERE session_token = '{{ $json.old_token }}'",
        "options": {}
      },
      "id": "deactivate-old-session",
