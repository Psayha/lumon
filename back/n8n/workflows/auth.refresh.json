{
  "name": "auth.refresh",
  "nodes": [
    {
      "parameters": {
        "httpMethod": "POST",
        "path": "auth-refresh",
        "responseMode": "responseNode",
        "options": {}
      },
      "id": "webhook-trigger",
      "name": "Webhook Trigger",
      "type": "n8n-nodes-base.webhook",
      "typeVersion": 1.1,
      "position": [250, 300],
      "webhookId": "auth-refresh"
    },
    {
      "parameters": {
        "functionCode": "// Extract token from webhook body or Authorization header\nconst input = $input.item.json;\nconst body = input.body || input;\nconst headers = input.headers || {};\n\n// Try to get token from Authorization header first\nconst authHeader = headers.authorization || headers.Authorization || '';\nlet token = null;\n\nif (authHeader && authHeader.startsWith('Bearer ')) {\n  token = authHeader.replace('Bearer ', '').trim();\n} else if (body.token) {\n  // Fallback to body.token for backward compatibility\n  token = body.token;\n}\n\nif (!token) {\n  return {\n    json: {\n      error: true,\n      code: 'MISSING_TOKEN',\n      message: 'Session token is required',\n      status: 400\n    }\n  };\n}\n\nreturn {\n  json: {\n    old_token: token\n  }\n};"
      },
      "id": "extract-token",
      "name": "Extract Token",
      "type": "n8n-nodes-base.function",
      "typeVersion": 1,
      "position": [450, 300]
    },
    {
      "parameters": {
        "conditions": {
          "options": {
            "caseSensitive": true,
            "leftValue": "",
            "typeValidation": "strict"
          },
          "conditions": [
            {
              "id": "check-error",
              "leftValue": "={{ $json.error }}",
              "rightValue": "",
              "operator": {
                "type": "string",
                "operation": "notEmpty"
              }
            }
          ],
          "combinator": "and"
        },
        "options": {}
      },
      "id": "check-extract-error",
      "name": "IF Extract Error",
      "type": "n8n-nodes-base.if",
      "typeVersion": 2,
      "position": [550, 300]
    },
    {
      "parameters": {
        "operation": "executeQuery",
        "query": "SELECT \n  s.id,\n  s.session_token,\n  s.user_id,\n  s.company_id,\n  s.role,\n  s.expires_at\nFROM sessions s\nWHERE s.session_token = '{{ $json.old_token }}' AND s.is_active = true",
        "options": {}
      },
      "id": "get-old-session",
      "name": "Get Old Session",
      "type": "n8n-nodes-base.postgres",
      "typeVersion": 2.4,
      "position": [750, 400],
      "credentials": {
        "postgres": {
          "id": "supabase-postgres",
          "name": "Supabase PostgreSQL"
        }
      }
    },
    {
      "parameters": {
        "functionCode": "// Check if old session exists\nconst session = $input.item.json;\n\nif (!session.id) {\n  return {\n    json: {\n      error: true,\n      code: 'SESSION_NOT_FOUND',\n      message: 'Invalid session token',\n      status: 401\n    }\n  };\n}\n\n// Check if session is expired\nconst now = new Date();\nconst expiresAt = new Date(session.expires_at);\n\nif (now > expiresAt) {\n  return {\n    json: {\n      error: true,\n      code: 'SESSION_EXPIRED',\n      message: 'Cannot refresh expired session',\n      status: 401\n    }\n  };\n}\n\n// Pass through session data\nreturn {\n  json: session\n};"
      },
      "id": "validate-old-session",
      "name": "Validate Old Session",
      "type": "n8n-nodes-base.function",
      "typeVersion": 1,
      "position": [950, 400]
    },
    {
      "parameters": {
        "conditions": {
          "options": {
